<!-- empty_behavior_manager.launch -->

<launch>
  <arg name="resource_return_topic" default="default_resource_return_topic"
       doc="This is the topic that the Behavior Manager will use to notify other nodes
            that it released resources." />

  <arg name="resource_request_topic" default="default_resource_request_topic"
       doc="This topic should connect to the Resources Manager through a service call." />

  <arg name="take_resources_topic" default="default_resource_request_topic"
       doc="This is the topic that the Resource Manager uses to take resources from the Behavior
            Manager. Note that it will appear as [behavior name]/[instance id]/[take_resources_topic]" />

  <arg name="modify_nodes_topic" default="default_modify_nodes_topic"
       doc="This is the topic that Behavior Managers use to request that the Master ThreadPool
            spins up, remaps, or ends nodes." />

  <arg name="config_file" default="$(find empty_behavior_manager)/config/empty_behavior_manager.json"
       doc="This is the Json object that holds a list of the resources this Behavior Manager needs." />

  <node name="empty_behavior_manager_node"
        type="empty_behavior_manager_node"
        pkg="empty_behavior_manager"
        output="screen"
        launch-prefix="xterm -e" >

    <param name="resource_return_topic"  value="$(arg resource_return_topic)"  />
    <param name="resource_request_topic" value="$(arg resource_request_topic)" />
    <param name="take_resources_topic"   value="$(arg take_resources_topic)"   />
    <param name="modify_nodes_topic"     value="$(arg modify_nodes_topic)"     />
    <param name="config_file"            value="$(arg config_file)"            />
  </node>
</launch>
